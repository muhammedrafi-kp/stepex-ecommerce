<%- include('../admin_layouts/header.ejs') %>

  <style>
    .pagination-btn.active,
    .pagination-btn.active:hover {
      background-color: #007bff;
      border-color: #007bff;
    }

    .pagination {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .pagination span {
      margin: 0 5px;
    }
  </style>

  <div class="container-scroller">

    <%-include('navbar.ejs')%>

      <div class="container-fluid page-body-wrapper">

        <%-include('sidebar.ejs')%>

          <div class="main-panel">
            <div class="content-wrapper">
                <h3 class="page-title col-12 mb-4">
                  <span class="page-title-icon bg-gradient-primary text-white mr-2">
                    <i class="mdi mdi-cart menu-icon"></i>
                  </span> PRODUCTS
                </h3>
              <div class="col-lg-12 grid-margin stretch-card ">
                <div class="card">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-6 mb-3">
                        <input id="product-search-input" type="text" class="form-control" name="q" placeholder="Search by name, brand or gender" value="<%= typeof query !== 'undefined' ? query : '' %>">
                      </div>
                      <div class="col-md-6 mb-3 d-flex">
                        <a href="?" class="btn btn-light">Clear</a>
                      </div>
                    </div>

                    <div class="d-flex justify-content-end">
                      <a href="/admin/products/add-product"><button type="button"
                          class="btn btn-success btn-fw mx-2 p-2 ">Add
                          Product</button></a>
                      <a href="/admin/products/unlisted-products"><button type="button"
                          class="btn btn-danger btn-fw p-2 ">Unlisted
                          Products</button></a>
                    </div>

                    <table class="table table-striped mt-5">
                      <thead class="text-center bg-secondary ">
                        <tr>
                          <!-- <th class="font-weight-bold"> No. </th> -->
                          <th class="font-weight-bold"> Image </th>
                          <th class="font-weight-bold"> Product</th>
                          <th class="font-weight-bold"> Price</th>
                          <th class="font-weight-bold"> Gender/Category <br></th>
                          <th class="font-weight-bold"> Qty</th>
                          <th class="font-weight-bold"> Date</th>
                          <th class="font-weight-bold"> Action </th>
                        </tr>
                      </thead>
                      <tbody id="products-tbody" class="text-center ">
                        <% if(products.length> 0) { %>
                          <% products.forEach((product,index)=>{%>
                            <tr>
                              <!-- <td class="py-4">
                            <%= index+1+(currentPage-1)*5 %>.

                          </td> -->
                              <td>
                                <img src="/uploads/productImages/<%=product.images[0]%>" alt="img" />
                              </td>
                              <td>
                                <%= product.name %>
                              </td>
                              <td>
                                <%= product.price %>
                              </td>
                              <td>
                                <%= product.gender %> / <%= product.category.name %>
                              </td>
                              <td>
                                <%= product.quantity %>
                              </td>
                              <td>
                                <%= product.createdAt.toLocaleDateString() %>
                              </td>
                              <td>
                                <a href="/admin/products/edit-product?id=<%= product._id %>"
                                  class="btn btn-info btn-sm py-1 px-2 "><span>Edit</span></a>
                                <button onclick="unlistProduct('<%=product._id %>')"
                                  class="btn btn-danger btn-sm py-1 px-2 ">Delete</span></button>
                              </td>
                            </tr>
                          <%})%>
                        <% } else { %>
                          <tr>
                            <td colspan="7">No products found !</td>
                          </tr>
                        <% } %>
                      </tbody>
                    </table>

                    <div id="products-pagination" class="pagination d-flex justify-content-start mt-5 ">
                      <% const qParam = (typeof query !== 'undefined' && query) ? `&q=${encodeURIComponent(query)}` : '' %>
                      <% if (currentPage> 1) { %>
                        <a href="?page=1<%= qParam %>">&laquo;</a>
                        <% } %>
                          <% for (let i=1; i <=totalPages; i++) { %>
                            <% if (i==currentPage) { %>
                              <span class="btn btn-primary pagination-btn px-3 py-2 ">
                                <%= i %>
                              </span>
                              <% } else { %>
                                <span> <a href="?page=<%= i %><%= qParam %>" class="btn btn-secondary pagination-btn px-3 py-2 ">

                                    <%= i %>

                                  </a></span>
                                <% } %>
                                  <% } %>
                                    <% if (currentPage < totalPages) { %>
                                      <a href="?page=<%= totalPages %><%= qParam %>">&raquo;</a>
                                      <% } %>
                    </div>

                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
  </div>

  <script>
    function debounce(fn, delay) {
      let timeoutId;
      return function (...args) {
        clearTimeout(timeoutId);
        timeoutId = setTimeout(() => fn.apply(this, args), delay);
      }
    }

    async function fetchProducts(params) {
      const url = new URL(window.location.href);
      Object.entries(params || {}).forEach(([key, val]) => {
        if (val === null || val === undefined || val === '') {
          url.searchParams.delete(key);
        } else {
          url.searchParams.set(key, String(val));
        }
      });
      const res = await fetch(url.toString(), { headers: { 'Accept': 'application/json' } });
      if (!res.ok) throw new Error('Failed to fetch products');
      return res.json();
    }

    function renderProducts(data) {
      const tbody = document.getElementById('products-tbody');
      const pagination = document.getElementById('products-pagination');
      if (!tbody || !pagination) return;

      const products = Array.isArray(data.products) ? data.products : [];
      if (products.length === 0) {
        tbody.innerHTML = '<tr><td colspan="7">No products found !</td></tr>';
      } else {
        tbody.innerHTML = products.map((p, idx) => `
          <tr>
            <td><img src="/uploads/productImages/${(p.images && p.images[0]) || ''}" alt="img" /></td>
            <td>${p.name ?? ''}</td>
            <td>${p.price ?? ''}</td>
            <td>${(p.gender ?? '')} / ${(p.category && p.category.name) ? p.category.name : ''}</td>
            <td>${p.quantity ?? ''}</td>
            <td>${p.createdAt ? new Date(p.createdAt).toLocaleDateString() : ''}</td>
            <td>
              <a href="/admin/products/edit-product?id=${p._id}" class="btn btn-info btn-sm py-1 px-2 "><span>Edit</span></a>
              <button onclick="unlistProduct('${p._id}')" class="btn btn-danger btn-sm py-1 px-2 ">Delete</button>
            </td>
          </tr>
        `).join('');
      }

      const totalPages = Number(data.totalPages || 1);
      const currentPage = Number(data.currentPage || 1);
      const q = data.query || '';
      const qParam = q ? `&q=${encodeURIComponent(q)}` : '';
      let html = '';
      if (currentPage > 1) html += `<a href="?page=1${qParam}">&laquo;</a>`;
      for (let i = 1; i <= totalPages; i++) {
        if (i === currentPage) html += `<span class="btn btn-primary pagination-btn px-3 py-2 ">${i}</span>`;
        else html += `<span><a href="?page=${i}${qParam}" class="btn btn-secondary pagination-btn px-3 py-2 ">${i}</a></span>`;
      }
      if (currentPage < totalPages) html += `<a href="?page=${totalPages}${qParam}">&raquo;</a>`;
      pagination.innerHTML = html;

      pagination.querySelectorAll('a').forEach(a => {
        a.addEventListener('click', function (e) {
          e.preventDefault();
          const url = new URL(a.href);
          const nextPage = url.searchParams.get('page') || '1';
          const q = url.searchParams.get('q') || '';
          fetchProducts({ page: nextPage, q }).then(data => {
            renderProducts(data);
            const current = new URL(window.location.href);
            current.searchParams.set('page', nextPage);
            if (q) current.searchParams.set('q', q); else current.searchParams.delete('q');
            window.history.replaceState({}, '', current.toString());
          }).catch(console.error);
        });
      });
    }

    const handleProductSearch = debounce(function (event) {
      const value = (event.target.value || '').trim();
      fetchProducts({ page: 1, q: value }).then(data => {
        renderProducts(data);
        const url = new URL(window.location.href);
        url.searchParams.set('page', '1');
        if (value) url.searchParams.set('q', value); else url.searchParams.delete('q');
        window.history.replaceState({}, '', url.toString());
      }).catch(console.error);
    }, 400);

    document.addEventListener('DOMContentLoaded', function () {
      const input = document.getElementById('product-search-input');
      if (input) input.addEventListener('input', handleProductSearch);
      const pagination = document.getElementById('products-pagination');
      if (pagination) {
        pagination.querySelectorAll('a').forEach(a => {
          a.addEventListener('click', function (e) {
            e.preventDefault();
            const url = new URL(a.href);
            const nextPage = url.searchParams.get('page') || '1';
            const q = url.searchParams.get('q') || '';
            fetchProducts({ page: nextPage, q }).then(data => {
              renderProducts(data);
              const current = new URL(window.location.href);
              current.searchParams.set('page', nextPage);
              if (q) current.searchParams.set('q', q); else current.searchParams.delete('q');
              window.history.replaceState({}, '', current.toString());
            }).catch(console.error);
          });
        });
      }
    });

    async function unlistProduct(productId) {
      try {
        const confirmation = await Swal.fire({
          text: 'Are you sure you want to delete this product?',
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#d33',
          cancelButtonColor: '#3085d6',
          confirmButtonText: 'Yes, delete'
        });

        if (confirmation.isConfirmed) {

          await fetch(`/admin/products/unlist-product?id=${productId}`, {
            method: 'POST'
          });
          location.reload();
        }
      } catch (error) {
        console.error('Error blocking user:', error);

      }
    }

  </script>

